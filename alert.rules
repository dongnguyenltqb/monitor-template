groups:
- name: default
  rules:
   #Alert for any instance that is unreachable for >10s
   - alert: InstanceDown 
     expr: up == 0 
     for: 5s 
     labels: 
       severity: critical 
     annotations: 
       summary: "Instance {{ $labels.instance }} down" 
       description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 10s." 
